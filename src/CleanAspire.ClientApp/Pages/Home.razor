@page "/"
@using MudBlazor

<!-- Main Content Container -->
<div class="landing-page-content">

	<!-- 1. HERO SECTION -->
	<MudContainer MaxWidth="MaxWidth.Large" Class="d-flex flex-column justify-center align-center py-16" Style="min-height: 85vh;">

		<!-- Version Badge -->
		<MudChip T="string" Color="Color.Secondary" Variant="Variant.Outlined" Class="mb-6 px-4 animate-fade-in" Style="border-width: 1px;">
			🚀 Now on .NET 10
		</MudChip>

		<!-- Title -->
		<MudText Typo="Typo.h1" Align="Align.Center" Class="mb-2 font-weight-bold hero-title">
			Build Faster with
		</MudText>
		<MudText Typo="Typo.h1" Align="Align.Center" Class="gradient-text hero-title mb-6">
			CleanAspire
		</MudText>

		<!-- Description from README Overview -->
		<MudText Typo="Typo.h5" Align="Align.Center" Class="mud-text-secondary mb-10" Style="max-width: 900px; line-height: 1.6;">
			A cutting-edge template for <b>Blazor WebAssembly</b> & <b>PWA</b>.
			Seamlessly integrates <b>Minimal APIs</b>, <b>Aspire</b>, and <b>Scalar</b> for modern API documentation.
			Focus on Clean Architecture and extreme code simplicity.
		</MudText>

		<!-- Action Buttons -->
		<div class="d-flex gap-4 flex-wrap justify-center">
			<MudButton Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large"
					   EndIcon="@Icons.Material.Filled.RocketLaunch"
					   Href="https://cleanaspire.blazorserver.com/" Target="_blank"
					   Class="px-8 py-3 rounded-xl hover-scale elevation-4">
				Live Demo
			</MudButton>
			<MudButton Variant="Variant.Outlined" Color="Color.Inherit" Size="Size.Large"
					   StartIcon="@Icons.Custom.Brands.GitHub"
					   Href="https://github.com/neozhu/cleanaspire" Target="_blank"
					   Class="px-8 py-3 rounded-xl hover-scale border-solid">
				GitHub Repo
			</MudButton>
		</div>

		<!-- Tech Stack Badges -->
		<MudStack Row="true" Class="mt-16 opacity-70" Spacing="4" Justify="Justify.Center" Wrap="Wrap.Wrap">
			@RenderTechBadge(".NET 10")
			@RenderTechBadge("Aspire")
			@RenderTechBadge("Blazor PWA")
			@RenderTechBadge("Scalar")
			@RenderTechBadge("Kiota")
			@RenderTechBadge("Docker")
		</MudStack>
	</MudContainer>

	<!-- 2. FEATURES GRID (Mapped from README Key Features) -->
	<MudContainer MaxWidth="MaxWidth.Large" Class="py-20" ID="features">
		<div class="text-center mb-16">
			<MudText Typo="Typo.h3" Class="mb-4 font-weight-bold">
				Powerful <span class="mud-primary-text">Capabilities</span>
			</MudText>
			<MudText Typo="Typo.h6" Class="mud-text-secondary">
				Everything you need for a robust, offline-first enterprise application.
			</MudText>
		</div>

		<MudGrid Class="d-flex justify-center" Spacing="4">
			<!-- Feature 1: Aspire & NET 10 -->
			@RenderFeatureCard(Icons.Material.Filled.Speed, "Built-in Aspire & .NET 10",
						"Fully integrated with .NET Aspire for efficient orchestration. Uses the latest .NET 10 features for high-performance Minimal APIs.")

			<!-- Feature 2: Scalar & APIs -->
			@RenderFeatureCard(Icons.Material.Filled.Api, "Minimal APIs & Scalar",
						"Create concise APIs replaced traditional Swagger with Scalar for beautiful, modern OpenAPI documentation.")

			<!-- Feature 3: Offline PWA (Highlighted) -->
			@RenderFeatureCard(Icons.Material.Filled.WifiOff, "Robust Offline Support",
						"Offline mode enabled by default. Uses IndexedDB to cache data locally, ensuring seamless access and data sync when connection restores.")

			<!-- Feature 4: Kiota -->
			@RenderFeatureCard(Icons.Material.Filled.Hub, "Kiota Client Gen",
						"Utilizes Microsoft.Kiota to automatically generate strongly-typed API clients, ensuring consistent and error-free client-server communication.")

			<!-- Feature 5: Web Push -->
			@RenderFeatureCard(Icons.Material.Filled.NotificationsActive, "Real-Time Notifications",
						"Integrated Webpushr to deliver instant browser notifications, keeping users engaged with fully customizable updates.")

			<!-- Feature 6: DevOps -->
			@RenderFeatureCard(Icons.Material.Filled.CloudUpload, "Cloud & CI/CD Ready",
						"Preconfigured for Docker and includes GitHub Actions workflows for automated building, testing, and deployment.")
		</MudGrid>
	</MudContainer>

	<!-- 3. AI GENERATION SECTION -->
	<MudPaper Elevation="0" Class="py-24 mt-8 position-relative overflow-hidden"
			  Style="background: linear-gradient(135deg, var(--mud-palette-surface) 0%, rgba(var(--mud-palette-primary-rgb), 0.1) 100%); border-top: 1px solid var(--mud-palette-lines-default);">

		<!-- Decorative blobs -->
		<div class="absolute-blob blob-1"></div>
		<div class="absolute-blob blob-2"></div>

		<MudContainer MaxWidth="MaxWidth.Medium" Class="position-relative" Style="z-index: 2;">
			<div class="d-flex flex-column align-center text-center">
				<MudAvatar Color="Color.Secondary" Variant="Variant.Filled" Size="Size.Large" Class="my-6 glow-icon" Style="width: 80px; height: 80px;">
					<MudIcon Icon="@Icons.Material.Filled.AutoAwesome" Size="Size.Large" style="font-size: 2.5rem;" />
				</MudAvatar>

				<MudText Typo="Typo.h3" Class="font-weight-bold mb-4">
					🎉 Auto-generate Code Using Chat GPTs
				</MudText>

				<MudText Typo="Typo.h6" Class="mud-text-secondary mb-10">
					Stop writing boilerplate. CleanAspire is optimized for AI-driven development.
					Use our custom GPT to generate Repositories, Services, and UI components instantly.
				</MudText>

				<MudButton Variant="Variant.Filled" Color="Color.Secondary" Size="Size.Large"
						   EndIcon="@Icons.Material.Filled.OpenInNew"
						   Href="https://chatgpt.com/g/g-677e40252ff88191933bb84567b62e7b-cleanaspire-code-generator" Target="_blank"
						   Class="px-8 py-3 rounded-xl hover-scale mb-8">
					Try CleanAspire Code Generator
				</MudButton>

				<!-- Prompt Example Card -->
				<MudCard Class="pa-6 tech-card w-100" Style="text-align: left; border-left: 4px solid var(--mud-palette-secondary);">
					<div class="d-flex align-center mb-2">
						<MudIcon Icon="@Icons.Material.Filled.Terminal" Class="mr-2 mud-text-secondary" />
						<MudText Typo="Typo.overline" Color="Color.Secondary">Prompt Example</MudText>
					</div>
					<MudText Typo="Typo.body1" Class="font-monospace code-text">
						"Create a new Feature for 'ProductManagement' using CleanAspire structure. Include the Entity, Repository, Minimal API Endpoint, and a MudBlazor DataGrid view."
					</MudText>
				</MudCard>
			</div>
		</MudContainer>
	</MudPaper>

	<!-- 4. FOOTER -->
	<MudContainer MaxWidth="MaxWidth.Large" Class="py-12">
		<MudDivider Class="my-8" />
		<MudGrid>
			<MudItem xs="12" md="6">
				<div class="d-flex align-center mb-2">
					<MudIcon Icon="@Icons.Material.Filled.RocketLaunch" Color="Color.Primary" Class="mr-2" />
					<MudText Typo="Typo.h6" Class="font-weight-bold">CleanAspire</MudText>
				</div>
				<MudText Typo="Typo.caption" Class="mud-text-secondary">
					© @DateTime.Now.Year CleanAspire Open Source Project.
				</MudText>
			</MudItem>
			<MudItem xs="12" md="6" Class="d-flex justify-md-end gap-6 mt-4 mt-md-0">
				<MudLink Href="https://cleanaspire.blazorserver.com/" Target="_blank" Color="Color.Inherit">Demo</MudLink>
				<MudLink Href="https://github.com/neozhu/cleanaspire" Target="_blank" Color="Color.Inherit">GitHub</MudLink>
				<MudLink Href="https://chatgpt.com/g/g-677e40252ff88191933bb84567b62e7b-cleanaspire-code-generator" Target="_blank" Color="Color.Inherit">AI Tool</MudLink>
			</MudItem>
		</MudGrid>
	</MudContainer>

</div>

<style>
	/* Global Styles mapped to MainLayout Theme Variables */

	.landing-page-content {
		font-family: 'Montserrat', 'Segoe UI', sans-serif;
		overflow-x: hidden;
	}

	/* Gradient Text */
	.gradient-text {
		background: linear-gradient(120deg, var(--mud-palette-primary) 0%, var(--mud-palette-secondary) 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	/* Tech Card Styling with Hover Effects */
	.tech-card {
		transition: all 0.3s cubic-bezier(0.25, 0.8, 0.5, 1);
		border: 1px solid var(--mud-palette-lines-default);
		background-color: var(--mud-palette-surface);
		height: 100%;
	}

		.tech-card:hover {
			transform: translateY(-8px);
			border-color: var(--mud-palette-primary);
			box-shadow: 0 12px 24px rgba(0,0,0,0.08);
		}

	/* Dark Mode specific glow */
	.mud-theme-dark .tech-card:hover {
		box-shadow: 0 12px 24px rgba(123, 108, 246, 0.15);
	}

	/* Button Animations */
	.hover-scale {
		transition: transform 0.2s cubic-bezier(0.25, 0.8, 0.5, 1);
	}

		.hover-scale:hover {
			transform: scale(1.05);
		}

	/* Decorative Blobs for AI Section */
	.absolute-blob {
		position: absolute;
		border-radius: 50%;
		filter: blur(80px);
		opacity: 0.15;
		z-index: 1;
		pointer-events: none;
	}

	.blob-1 {
		width: 300px;
		height: 300px;
		background: var(--mud-palette-primary);
		top: -50px;
		left: -50px;
	}

	.blob-2 {
		width: 200px;
		height: 200px;
		background: var(--mud-palette-secondary);
		bottom: -50px;
		right: -50px;
	}

	.glow-icon {
		box-shadow: 0 0 30px var(--mud-palette-secondary-darken);
	}

	.code-text {
		font-family: 'Consolas', 'Monaco', monospace;
		color: var(--mud-palette-text-primary);
		font-size: 0.9rem;
		line-height: 1.5;
	}

	/* Responsive adjustments */
	@@media (max-width: 600px) {
		.hero-title {
			font-size: 2.2rem !important;
		}
	}
</style>

@code {
	// --- RenderFragments for UI Reusability ---

	// 1. Feature Card Component
	private RenderFragment RenderFeatureCard(string icon, string title, string description) => __builder =>
	{
		<MudItem xs="12" sm="6" md="4" Class="d-flex">
			<MudCard Class="tech-card pa-4 flex-grow-1 d-flex flex-column" Elevation="0">
				<MudCardContent>
					<MudAvatar Variant="Variant.Outlined" Color="Color.Primary" Class="mb-4" Rounded="true">
						<MudIcon Icon="@icon" />
					</MudAvatar>
					<MudText Typo="Typo.h6" Class="mb-2 font-weight-bold">@title</MudText>
					<MudText Typo="Typo.body2" Class="mud-text-secondary" Style="line-height: 1.6;">@description</MudText>
				</MudCardContent>
			</MudCard>
		</MudItem>
	};

	// 2. Tech Badge Component
	private RenderFragment RenderTechBadge(string text) => __builder =>
	{
		<div class="d-flex align-center gap-2 select-none px-2" style="opacity: 0.8;">
			<MudIcon Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Secondary" Size="Size.Small" />
			<MudText Typo="Typo.h6" Class="font-weight-bold" Style="font-size: 1.1rem;">@text</MudText>
		</div>
	};
}